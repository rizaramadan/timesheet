@using Timesheet.Domains.FreeTimeEstimate
@model FreeTimeViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <main role="main" class="pb-3">
        <h2>Manage FreeTime </h2>
        <div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item"><a class="nav-link active">Create New</a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Index">List</a></li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="DayOfWeek" class="control-label"></label>
                                        <select asp-for="DayOfWeek"  asp-items="FreeTimeViewModel.DayOfWeekSelectItem" class="form-control"></select>
                                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HourStart" class="control-label"></label>
                                        <select asp-for="HourStart" asp-items="FreeTimeViewModel.HourSelectItem"  class="form-control" ></select>
                                        <span asp-validation-for="HourStart" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HourEnd" class="control-label"></label>
                                        <select asp-for="HourEnd" asp-items="FreeTimeViewModel.HourSelectItem" class="form-control"></select>
                                        <span asp-validation-for="HourEnd" class="text-danger"></span>
                                    </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<div class="row">
    <div class="col-md-4">
        <form >
            <div class="form-group">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
